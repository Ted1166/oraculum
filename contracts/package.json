{
  "name": "contracts",
  "version": "1.0.0",
  "type": "module",
  "description": "Predict & Fund - Prediction markets meet crowdfunding",
  "scripts": {
    "compile": "hardhat compile",
    "compile:production": "hardhat compile --profile production",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:bscTestnet": "hardhat run scripts/deploy.ts --network bscTestnet",
    "test-flow:sepolia": "hardhat run scripts/test-flow.ts --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhatMainnet",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network bscMainnet",
    "test-flow:local": "hardhat run scripts/test-flow.ts --network hardhatMainnet",
    "test-flow:testnet": "hardhat run scripts/test-flow.ts --network bscTestnet",
    "verify:testnet": "hardhat verify --network bscTestnet",
    "verify:mainnet": "hardhat verify --network bscMainnet",
    "clean": "hardhat clean",
    "node": "hardhat node"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "chai": "^6.2.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.6",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@types/chai": "^5.2.3",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "hardhat": "^3.0.13",
    "viem": "^2.39.0"
  }
}
